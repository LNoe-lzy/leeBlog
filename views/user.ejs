<%- include header.ejs %>
<div class="con-right-post">
    <% posts.forEach(function(post, index){ %>
    <div class="post-info">
        <p><h4><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a> </h4></p>
        <p class="info">
            作者:<a href="/u/<%= post.name %>"><%= post.name %></a> |
            日期:<%= post.time.minute %>
        </p>
        <p><%- post.post %></p>
        <p class="post-pv">
            阅读:<%= post.pv %>
            <b>·</b>
            转载:
            <% if (post.reprint_info.reprint_to) { %>
            <%= post.reprint_info.reprint_to.length %>
            <% } else { %>
            <%= 0 %>
            <% } %>
            <% if (post.reprint_info.reprint_from) { %>
            <b>·</b>
            <a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">原文链接</a>
            <% } %>
        </p>
    </div>
    <% }) %>
</div>
<%- include footer.ejs %>