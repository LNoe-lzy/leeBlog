<%- include header.ejs %>
<div class="right-form">
    <form method="post">
        <div class="form-group">
            <label for="inputTitle">标题:</label>
            <input type="text" name="title" class="form-control" id="inputTitle" placeholder="title">
        </div>
        <div class="form-group">
            <label for="inputTag1">标签一:</label>
            <input type="text" name="tag1" class="form-control" id="inputTag1">
        </div>
        <div class="form-group">
            <label for="inputTag2">标签二:</label>
            <input type="text" name="tag2" class="form-control" id="inputTag2">
        </div>
        <div class="form-group">
            <label for="inputTag3">标签三:</label>
            <input type="text" name="tag3" class="form-control" id="inputTag3">
        </div>
        <div class="form-group">
            <label for="inputText">正文:</label>
            <textarea name="post" class="form-control" rows="20" id="inputText"></textarea>
        </div>
        <input type="submit" value="发表" class="btn btn-default">
    </form>
</div>
